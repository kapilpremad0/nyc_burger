<div class="app-content content">
  <div class="content-overlay"></div>
  <div class="header-navbar-shadow"></div>
  <div class="content-wrapper container-xxl p-0">
    <div class="content-body">
      <div class="row" id="table-bordered">
        <div class="col-12">
          <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
              <h4 class="card-title">Orders</h4>
            </div>

            <div class="card-body">

              <!-- ðŸ”½ Filters -->
              <div class="row mb-2">
                <div class="col-md-2">
                  <select id="filterOrderType" class="form-control">
                    <option value="">All Order Types</option>
                    <option value="dinein">Dine-in</option>
                    <option value="takeaway">Takeaway</option>
                  </select>
                </div>
                <div class="col-md-2">
                  <select id="filterPayment" class="form-control">
                    <option value="">All Payment Methods</option>
                    <option value="cash">Cash</option>
                    <option value="online">Online</option>
                  </select>
                </div>
                <div class="col-md-2">
                  <select id="filterStatus" class="form-control">
                    <option value="">All Status</option>
                    <option value="pending">Pending</option>
                    <option value="baked">Baked</option>
                    <option value="delivered">Delivered</option>
                  </select>
                </div>



               <% if (!appUser.branch) { %>
                <div class="col-md-3">
                  <select id="filterBranch" class="form-control">
                    <option value="">All Branches</option>
                    <% if (appBranch && appBranch.length) { %>
                    <% appBranch.forEach(branch => { %>
                    <option value="<%= branch._id %>"><%= branch.name %></option>
                    <% }) %>
                    <% } %>
                  </select>
                </div>
                <% } %>



                <div class="col-md-3">
                  <select id="paymentStatusFilter" class="form-select">
                    <option value="">All Payment Status</option>
                    <option value="pending">Pending</option>
                    <option value="completed">Completed</option>
                  </select>
                </div>


              </div>

              <div class="table-responsive card card-company-table">
                <table class="table" id="ordersTable">
                  <thead>
                    <tr>
                      <th>#</th>
                      <th>Order ID</th>
                      <th>Customer Name</th>
                      <th>Mobile</th>
                      <th>Branch</th>
                      <th>Order Type</th>
                      <th>Payment Method</th>
                      <th>Payment Status</th>
                      <th>Total Amount</th>
                      <th>Status</th>
                      <th>Date</th>
                    </tr>
                  </thead>
                  <tbody></tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function() {
    var table = $('#ordersTable').DataTable({
      processing: true,
      serverSide: true,
      ajax: {
        url: '/admin/orders/data',
        type: 'POST',
        contentType: 'application/json',
        data: function(d) {
          d.orderType = $('#filterOrderType').val();
          d.paymentMethod = $('#filterPayment').val();
          d.status = $('#filterStatus').val();
          d.branchId = $('#filterBranch').val();
          d.paymentStatus = $('#paymentStatusFilter').val();
          return JSON.stringify(d);
        }
      },
      columns: [{
          data: 'serial'
        },
        {
          data: 'orderId',
          render: function(data, type, row) {
            return `<a href="/admin/orders/${row._id}" class="text-primary">${data}</a>`;
          }
        },
        {
          data: 'customerName',
          defaultContent: '-'
        },
        {
          data: 'customerMobile',
          defaultContent: '-'
        },
        {
          data: 'branch',
          defaultContent: '-'
        },
        {
          data: 'orderType',
          render: function(data) {
            if (data === 'dinein') return '<span class="badge bg-primary">Dine-in</span>';
            if (data === 'takeaway') return '<span class="badge bg-warning">Takeaway</span>';
            return '-';
          }
        },
        {
          data: 'paymentMethod',
          render: function(data) {
            if (data === 'cash') return '<span class="badge bg-secondary">Cash</span>';
            if (data === 'online') return '<span class="badge bg-success">Online</span>';
            return '-';
          }
        },
        {
          data: 'paymentStatus', // âœ… New column
          render: function(data) {
            if (data === 'completed') return '<span class="badge bg-success">Completed</span>';
            if (data === 'pending') return '<span class="badge bg-danger">Pending</span>';
            return '-';
          }
        },
        {
          data: 'totalAmount'
        },
        {
          data: 'status',
          render: function(data) {
            if (data === 'pending') return '<span class="badge bg-info">Pending</span>';
            if (data === 'baked') return '<span class="badge bg-warning">Baked</span>';
            if (data === 'delivered') return '<span class="badge bg-success">Delivered</span>';
            return '<span class="badge bg-secondary">Unknown</span>';
          }
        },
        {
          data: 'createdAt'
        }
      ],
      drawCallback: function(settings) {
        feather.replace();
      }
    });

    // ðŸ”„ Reload table when filters change
    $('#filterOrderType, #filterPayment, #filterStatus, #filterBranch ,#paymentStatusFilter').on('change', function() {
      table.ajax.reload();
    });
  });
</script>