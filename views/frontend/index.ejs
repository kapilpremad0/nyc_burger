    <script>
        const sliderTrack = document.getElementById("sliderTrack");
        let cards = Array.from(sliderTrack.querySelectorAll(".main-burger"));
        const thumbs = document.querySelectorAll(".thumb");

        function getCardWidth() {
            return window.innerWidth < 768 ? window.innerWidth : 420; // Full width on mobile
        }

        let cardWidth = getCardWidth();
        let current = 1;

        // Clone first and last for infinite illusion
        const firstClone = cards[0].cloneNode(true);
        const lastClone = cards[cards.length - 1].cloneNode(true);
        firstClone.setAttribute("data-clone", "first");
        lastClone.setAttribute("data-clone", "last");

        sliderTrack.appendChild(firstClone);
        sliderTrack.insertBefore(lastClone, cards[0]);

        // Re-select all cards after cloning
        cards = Array.from(sliderTrack.querySelectorAll(".main-burger"));

        // Initial position
        sliderTrack.style.transform = `translateX(-${cardWidth * current}px)`;

        function updateSlider() {
            cards.forEach((card, i) => {
                card.classList.remove("active", "next");
                if (i === current) {
                    card.classList.add("active");
                } else if (i === (current + 1) % cards.length) {
                    card.classList.add("next");
                }
            });

            const realIndex = current === 0 ? cards.length - 3 :
                current === cards.length - 1 ? 0 : current - 1;

            thumbs.forEach((thumb, i) => {
                thumb.classList.toggle("active", i === realIndex);
            });

            sliderTrack.style.transition = "transform 0.5s ease";
            sliderTrack.style.transform = `translateX(-${cardWidth * current}px)`;
        }

        function nextSlide() {
            if (current >= cards.length - 1) return;
            current++;
            updateSlider();
        }

        function prevSlide() {
            if (current <= 0) return;
            current--;
            updateSlider();
        }

        function goToSlide(index) {
            current = index + 1;
            updateSlider();
        }

        sliderTrack.addEventListener("transitionend", () => {
            if (cards[current].getAttribute("data-clone") === "first") {
                sliderTrack.style.transition = "none";
                current = 1;
                sliderTrack.style.transform = `translateX(-${cardWidth * current}px)`;
                requestAnimationFrame(() => updateSlider());
            }
            if (cards[current].getAttribute("data-clone") === "last") {
                sliderTrack.style.transition = "none";
                current = cards.length - 2;
                sliderTrack.style.transform = `translateX(-${cardWidth * current}px)`;
                requestAnimationFrame(() => updateSlider());
            }
        });

        // Auto Slide
        setInterval(() => {
            nextSlide();
        }, 4000);

        // Responsive resize
        window.addEventListener("resize", () => {
            cardWidth = getCardWidth();
            updateSlider();
        });

        // Init
        updateSlider();
    </script>


